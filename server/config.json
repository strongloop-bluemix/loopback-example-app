{
  "restApiRoot": "/api",
  "host": "0.0.0.0",
  "port": 3000,
  "status": "/ping",
  "remoting": {
    "context": {
      "enableHttpContext": false
    },
    "rest": {
      "normalizeHttpPath": false,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "100kb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    },
    "cors": false,
    "errorHandler": {
      "disableStackTrace": false
    }
  },
  "legacyExplorer": true,
  "logger": {
    "level": "debug",
    "directory": "server/logs",
    "filename": "app.log"
  }
}
